{cover_export_enabled, true}.
{cover_excl_mods, [
  shackle_client,
  shackle_protocol
]}.

{deps, [
  {foil, "0.1.3"},
  {metal, "0.1.1"},
  {telemetry, "1.2.1"}
]}.

{dialyzer, [{plt_extra_apps, [public_key]}]}.

{ex_doc, [
  {api_reference, false},
  {extras, ["README.md"]},
  {main, "readme"},
  {prefix_ref_vsn_with_v, false},
  {source_url, "https://github.com/lpgauth/shackle"}
]}.

{erl_opts, [
  debug_info,
  {platform_define, "^21.3|^22|^23|^24|^25|^26", 'ATOMICS'},
  {platform_define, "^23|^24|^25|^26", 'DECENTRALIZED_COUNTERS'},
  {platform_define, "^18|^19|^2", 'ETS_TAKE'},
  {platform_define, "^21|^22|^23|^24|^25|^26", 'SSL_HANDSHAKE'}
]}.

{plugins, [rebar3_hex, rebar3_ex_doc]}.

{hex, [
  {doc, #{provider => ex_doc}}
]}.

{profiles, [
  {bench, [
    {deps, [
      {timing,
        {git, "https://github.com/lpgauth/timing.git", {tag, "0.1.3"}}}
    ]},
    {extra_src_dirs, ["test"]}
  ]},
  {compile, [
    {erl_opts, [
      warnings_as_errors,
      warn_export_all,
      warn_export_vars,
      warn_missing_spec,
      warn_obsolete_guard,
      warn_shadow_vars,
      warn_untyped_record,
      warn_unused_import,
      warn_unused_vars
    ]}
  ]},
  {profile, [
    {deps, [
      {fprofx,
        {git, "https://github.com/lpgauth/fprofx.git", {branch, "otp_19"}}}
    ]},
    {extra_src_dirs, ["test"]}
  ]}
]}.

{xref_checks, [
  deprecated_functions,
  deprecated_function_calls,
  locals_not_used,
  undefined_function_calls
]}.
